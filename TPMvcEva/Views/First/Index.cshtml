                    <td class="auto-style1">
                        <p>
                        </p>
                    </td>
                    <td>
                        <p>
                            &nbsp;
                        </p>
                    </td>
                </tr>
                <tr>
                    <td class="planning">
                        <p class="planning" align="right">Prénoms :
                    </td>
                    <td>
                        <div align="left">
                            <input id="textBoxPrenom"  width="296" name="prenom" />

                        </div>
                    </td>
                    <td class="auto-style1">
                        <p class="planning" align="right">
                            Fonction :
                        </p>
                    </td>
                    <td class="planning">
                        <div align="left">
                            <input id="textFonction"  width="210" CssClass="auto-style3" name="fonction"/>
                        </div>
                    </td>
                </tr>
            </tbody>
            <tr>
