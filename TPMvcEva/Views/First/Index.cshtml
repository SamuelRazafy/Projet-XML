        <table cellspacing="0" cellpadding="0" width="100%" border="0">
            <tbody>
                <tr>
                    <td valign="top" width="143">
                        <div align="left">
                            <button type="submit" id="buttonValider"  width="230px" visible="True"
                                    font-bold="True" forecolor="#C04000" action="Verifier">
                                Vérifier
                            </button>
                        </div>
                    </td>
                    <td>
                        <label id="Label1"  font-size="Large" name="Izy"></label>
                    </td>

                </tr>
            </tbody>
        </table>
        <p>
        </p>
        </p>
        <p>
            <panel id="panelPlanning">
                <TABLE cellspacing="3" cellpadding="6" width="100%" bgcolor="#aaaadd" border="0">
                    <TR>
                        <TD>
                            <P class="planning" align="center">Département</P>
                        </TD>
                        <TD>
                            <P class="planning" align="center">Service</P>
                        </TD>
                    </TR>
                    <TR>
                        <TD>
                            <DIV align="center">
                                <input id="textBoxDepartement" width="220" readonly="readonly" type="text" name="departement" />
