@model TPMvcEva.Models.Info
@using TPMvcEva.Models
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>TPMVC</title>
    <style type="text/css">
        .planning {
            width: 72px;
        }

        .auto-style1 {
            width: 96px;
        }

        .auto-style2 {
            width: 507px;
        }

        .auto-style3 {
            margin-left: 6px;
        }

        #buttonValider {
            cursor: pointer;
            border-radius: 10px;
        }

            #buttonValider:hover {
                background-color: #ADB1B2;
                transition: 0.7s ease;
                border-color: transparent;
            }

        #buttonValideConge {
            cursor: pointer;
            border-radius: 10px;
        }

            #buttonValideConge:hover {
                background-color: #ADB1B2;
                transition: 0.7s ease;
                border-color: transparent;
            }
    </style>
</head>
