    <form id="form1" action="/First/Verifier" method="post">
        <div>
            <table cellspacing="3" cellpadding="3" width="100%" border="0">
                <tbody>
                    <tr>
                        <td bgcolor="#ffcc99">
                            <img src="conges.jpg" imagealign="Middle" width="100" height="73"><img />
                            &nbsp;
