            <TABLE width="100%" bgcolor="#ffcc99" border="0">
                <TR>
                    <TD width="50%">
                        <TABLE cellspacing="3" cellpadding="3" bgcolor="#ffcc99" border="0">
                            <TR>
                                <TD colspan="4">
                                    <B>Demande&nbsp;de congés</B>
                                </TD>
                            </TR>
                            <TR>
                                <TD>Motif :</TD>
                                <TD>


                                    <div class="row row-space">
                                        <div class="rs-select2 col-2 js-select-simple select--no-search">
                                            <select id="Departement" name="Departement">
                                                <option disabled="disabled" selected="selected"></option>
                                                <option>Congé payé</option>
                                                <option>Jour férié</option>
                                                <option>Repos</option>
                                                <option>Maladie</option>
                                                <option>Accident de travail</option>
                                                <option>Pré-retraite programmée</option>
                                                <option>Formation</option>
                                                <option>Autre</option>
                                            </select>
                                            <div class="select-dropdown"></div>
                                        </div>

                                    </div>

                                </TD>
                                <TD></TD>
                                <TD></TD>
                            </TR>
                            <TR>
                                <TD>Date début :</TD>
                                <TD>
                                    <input id="textBoxDebut"  readonly="readonly" type="text" name="debut"/>

                                <TD>Date fin :</TD>
                                <TD>
                                    <input id="textBoxFin"  readonly="readonly" type="text" name="fin" />

                            </TR>
                        </TABLE>
                    </TD>
                    <TD align="center">
                        <div class="col-2">
                            <div class="input-group">

                                <div class="p-t-10">
                                    <label class="radio-container m-r-45">
                                        <input type="radio" value="Journée" name="mety">
                                        Journée

                                        <span class="checkmark"></span>
                                    </label>
                                    <label class="radio-container">
                                        <input type="radio" value="1/2. matin" name="mety">
